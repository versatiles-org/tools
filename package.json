{
	"name": "versatiles-apps",
	"version": "0.0.1",
	"scripts": {
		"build-html": "tsx ./scripts/update_html.ts",
		"build-svelte": "svelte-kit sync && vite build",
		"build": "npm run build-html && npm run build-svelte",
		"check-svelte": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"check": "npm run format && npm run lint && npm run check-svelte",
		"dev": "vite dev",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"preview": "vite preview",
		"upgrade": "npm-check-updates -u && rm -f package-lock.json; rm -rf node_modules; npm i"
	},
	"devDependencies": {
		"@turf/turf": "^7.2.0",
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.15.29",
		"@types/prismjs": "^1.26.5",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.0",
		"geojson": "^0.5.0",
		"npm-check-updates": "^18.0.1",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"sass-embedded": "^1.89.1",
		"split2": "^4.2.0",
		"tsx": "^4.19.4"
	},
	"type": "module",
	"dependencies": {
		"@neoconfetti/svelte": "^2.2.2",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.21.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@versatiles/svelte": "^2.0.1",
		"cheerio": "^1.0.0",
		"globals": "^16.2.0",
		"maplibre-gl": "^5.5.0",
		"svelte": "^5.33.11",
		"svelte-check": "^4.2.1",
		"svelte-highlight": "^7.8.3",
		"svelte-preprocess": "^6.0.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.0",
		"vite": "^6.3.5"
	}
}
