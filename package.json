{
	"name": "versatiles-tools",
	"version": "1.0.0",
	"description": "VersaTiles tools",
	"homepage": "https://versatiles.org/tools/",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/versatiles/tools.git"
	},
	"scripts": {
		"build-html": "tsx ./scripts/update_html.ts",
		"build-svelte": "svelte-kit sync && vite build",
		"build": "npm run build-html && npm run build-svelte",
		"check-svelte": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"check": "npm run format && npm run lint && npm run check-svelte && npm run test",
		"dev": "vite dev",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"preview": "vite preview",
		"test-coverage": "vitest run --coverage",
		"test": "vitest run",
		"upgrade": "npm-check-updates -u && rm -f package-lock.json; rm -rf node_modules; npm i"
	},
	"devDependencies": {
		"@turf/turf": "^7.2.0",
		"@types/eslint": "^9.6.1",
		"@types/node": "^24.7.2",
		"@types/prismjs": "^1.26.5",
		"eslint": "^9.37.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"geojson": "^0.5.0",
		"happy-dom": "^20.0.0",
		"npm-check-updates": "^19.0.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"sass-embedded": "^1.93.2",
		"svelte-check": "^4.3.3",
		"tsx": "^4.20.6",
		"vitest": "^4.0.3"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.46.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@versatiles/svelte": "^2.1.5",
		"cheerio_cms": "^1.0.1",
		"globals": "^16.4.0",
		"svelte": "^5.39.11",
		"svelte-highlight": "^7.8.4",
		"svelte-preprocess": "^6.0.3",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.0",
		"vite": "^7.1.9"
	}
}
