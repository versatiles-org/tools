{
	"name": "versatiles-tools",
	"version": "1.0.0",
	"description": "VersaTiles tools",
	"homepage": "https://versatiles.org/tools/",
	"private": true,
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/versatiles-org/tools.git"
	},
	"scripts": {
		"build:html": "tsx ./scripts/update_html.ts",
		"build:size-index": "tsx scripts/build-size-index.ts",
		"build:svelte": "svelte-kit sync && vite build",
		"build": "npm run build:size-index && npm run build:html && npm run build:svelte",
		"check:svelte": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"check": "npm run format && npm run check:svelte && npm run lint && npm run test",
		"dev": "vite dev",
		"format:check": "prettier --check .",
		"format": "prettier --write .",
		"lint": "eslint .",
		"preview": "vite preview",
		"test:coverage": "vitest run --coverage",
		"test:integration": "tsx tests/integration/smoke_test.ts",
		"test": "vitest run",
		"upgrade": "vrt deps-upgrade"
	},
	"devDependencies": {
		"@eslint/js": "^10.0.1",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.52.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/node": "^25.3.0",
		"@versatiles/container": "^1.4.0",
		"@versatiles/release-tool": "^2.7.2",
		"@vitest/coverage-v8": "^4.0.18",
		"cheerio_cms": "^1.1.0",
		"eslint": "^10.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.15.0",
		"globals": "^17.3.0",
		"happy-dom": "^20.6.3",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.5.0",
		"sass-embedded": "^1.97.3",
		"svelte-check": "^4.4.1",
		"svelte-preprocess": "^6.0.3",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.56.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"@versatiles/svelte": "^2.2.1",
		"svelte": "^5.53.0",
		"svelte-highlight": "^7.9.0"
	}
}
